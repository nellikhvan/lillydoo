{% extends 'base.html.twig' %}

{% block body %}
<div class="container">
    <h1>Address book</h1>

    <div>
        <a href="/addressbook/add" class="btn btn-primary">Add new address</a>
    </div><br />

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>First name</th>
                <th>Last name</th>
                <th>Street & number</th>
                <th>Zip</th>
                <th>City</th>
                <th>Phone number</th>
                <th>Birthday</th>
                <th>Email</th>
                <th>Picture url</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for addressBook in addressBooks %}
            <tr>
                <td>{{ addressBook.id }}</td>
                <td>{{ addressBook.firstName }}</td>
                <td>{{ addressBook.lastName }}</td>
                <td>{{ addressBook.streetAndNumber }}</td>
                <td>{{ addressBook.zip }}</td>
                <td>{{ addressBook.city }}</td>
                <td>{{ addressBook.phoneNumber }}</td>
                <td>{% if addressBook.birthday %}{{ addressBook.birthday|date('Y-m-d') }}{% endif %}</td>
                <td>{{ addressBook.email }}</td>
                <td>{{ addressBook.pictureUrl }}</td>
                <td>
                    <div class="list-group">
                        <a href="/addressbook/{{ addressBook.id }}" class="btn btn-secondary">Show</a>
                        <a href="/addressbook/edit/{{ addressBook.id }}" class="btn btn-info">Edit</a>
                    </div>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
